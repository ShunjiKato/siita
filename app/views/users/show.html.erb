<% provide(:title, @user.username) %>
<div class="row userPage">
  <div class="col-md-3">
    <% if @user.image.url.present? %>
      <%= image_tag(@user.image.url, size: "165x165", class: "img-rounded")  %>
    <% else %>
      <div class="userNoImage">No Image</div>
    <% end %>
    <h3><%= @user.username %></h3>
    <%= render 'follow_form' if user_signed_in? && @user.id != current_user.id %>
    <div>
      <i class="fa fa-users"></i>フォロー中のユーザー
        <strong id="following" class="stat">
          <%= @user.following.count %>
        </strong>
    </div>
  </div>
  <div class="col-md-9"></div>
</div>
