<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: "sr-only control-label" %><br />
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password, class: "sr-only control-label" %><br />
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control",autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="checkbox-inline">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        </div>
      <% end -%>
    
      <div class="actions form-group">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
