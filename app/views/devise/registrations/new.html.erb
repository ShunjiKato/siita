<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field form-group">
        <%= f.label :username, class: "sr-only 1control-label" %><br />
        <%= f.text_field :username, placeholder: "ユーザ名", class: "form-control", autofocus: true %>
      </div>

      <div class="field form-group">
        <%= f.label :email, class: "sr-only control-label" %><br />
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", autofocus: true %>
      </div>
    
      <% if f.object.password_required? %>
    
        <div class="field form-group">
          <%= f.label :password, class: "sr-only control-label" %>
          <% if @minimum_password_length %>
          <em>( <%= @minimum_password_length %> 文字以上で入力してください )</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control",  autocomplete: "off" %>
        </div>
    
        <div class="field form-group">
          <%= f.label :password_confirmation, class: "sr-only control-label" %><br />
          <%= f.password_field :password_confirmation, placeholder: "確認用パスワード", class: "form-control", autocomplete: "off" %>
        </div>
      <% end %>
    
      <div class="actions form-group">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
